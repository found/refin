<div id="container_main_content">
  <div id="content">
	

<% content_for :body_content_title do %>
  <%= t('plugins.refinerycms_news.title') %>
<% end %>

<% content_for :body_content_left do %>
  <br /><a name="top"></a>
	<h1><%= @title %></h1><hr />
  <%= @page[:body] if @news_items.offset == 0 %>

  <% if @news_items.any? %>
    <% @news_items.each do |item| %>
      <article class="news_item_truncated">
				<h3 style="line-height:20px;"><%= link_to item.title, news_item_url(item) %> <small><%= item.long_time %></small></h3>
       	<p> 
    		<%= truncate  item.body, :length => 300, :omission => " ... #{link_to t('.read_more'), news_item_url(item)}", :preserve_html_tags => true %>
				</p>
				<hr />
      </article>
			
    <% end %>

    <%= will_paginate(@news_items) %>
  <% else %>
    <p><em><%= t('.no_items_yet') %></em></p>
  <% end %>
<% end -%>

<%= render :partial => "/shared/content_page" %>

</div>
</div>