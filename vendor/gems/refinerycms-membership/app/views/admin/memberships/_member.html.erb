<h3>Donor Profile:</h3>
<table>
	<tbody>
		<tr>
			<td style="width:300px;">Email:</td>
			<td>
				<%= @member.email %>
				<% if @member.submitted_contact_form %>
					This member is linked to a contact. <%= link_to "View contact profile", admin_contact_url(@member.contact) %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>First Name:</td>
			<td><%= @member.first_name %></td>
		</tr>
		<tr>
			<td>Last Name:</td>
			<td><%= @member.last_name %></td>
		</tr>
		<tr>
			<td>Donor Number:</td>
			<td><%= @member.donor_number%></td>
		</tr>
		<tr>
			<td>Authorize.NET CIM ID:</td>
			<td><%= @member.customer_cim_id %></td>
		</tr>
		<tr>
			<td>Phone Number:</td>
			<td><%= @member.phone %></td>
		</tr>
		<tr>
			<td>Verified?</td>
			<td><%= @member.verified %></td>
		</tr>
	</tbody>
</table>