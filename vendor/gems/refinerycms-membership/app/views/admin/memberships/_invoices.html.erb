
<% if !@member.invoices.empty? %>
	<table>
		<thead>
			<tr>
				<th>Invoice</th>
				<th>Amount</th>
				<th>Date</th>
			</tr>
		</thead>
		<tbody>
			<% @member.invoices.order("created_at DESC").limit(10).each do |i| %>
				<tr>
					<td><%= link_to i.invoice_number, invoice_path(i), :class => "orange-link" %></td>
					<td><%= "$#{i.amount}.00" %></td>
					<td><%= i.updated_at.strftime("%m/%d/%Y") %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>This donor does not currently have any invoices.</p>
<% end %>