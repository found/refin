<h3>Editing Country</h3>
<% form_for @country, :url => "/refinery/memberships/update_country_item/#{@country.id}" do |f| %>
	<table>
		<tr>
			<td>Country Code:</td>
			<td><%= f.text_field :country_code %></td>
		</tr>
		<tr>
			<td>Country Name:</td>
			<td><%= f.text_field :country_name %></td>
		</tr>
		<tr>
			<td>Position:</td>
			<td><%= f.text_field :position %></td>
		</tr>
		<tr>
			<td><%= f.submit "Update this country!" %></td>
			<td>&nbsp;</td>
		</tr>
	</table>
<% end %>