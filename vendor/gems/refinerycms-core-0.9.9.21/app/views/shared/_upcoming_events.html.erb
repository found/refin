<a href="/events"><h3>Town Calendar <br /> &amp; Special Events</h3></a>
 <ul>
	<% Event.find(:all, :conditions => ["featured = ?", true], :limit => 3).each do |evt| %>
		<li> <%= link_to (image_fu evt.image, "125x125>"), "" unless evt.image.nil? %>
			<h4><%= link_to evt.title, event_url(evt) %></h4>
			<p><strong><%= start = evt.start_at.strftime("%b %d") %> <%= endat = evt.end_at.strftime("%b %d"); " â€“ #{endat}" if start != endat %> </strong></p>
			<p><%= shorten(strip_tags(evt.description), 180) %> <br /><br /><%= link_to "read more", event_url(evt) %></p>
		</li>

	<% end %>
 </ul>
<ul>
	<% Meeting.find(:all, :order => "created_at DESC", :limit => 3).each do |meeting| %>
		<li>
			<h4><%= link_to meeting.title, meeting_url(meeting) %></h4>

			<p><%= shorten(strip_tags(meeting.blurb), 180) %> <br /><br /><%= link_to "read more", meeting_url(meeting) %></p>
		</li>

	<% end %>
 </ul>