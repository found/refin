<a href="/events"><h3>Town Calendar <br /> &amp; Special Events</h3></a>
 <ul>
	<% Event.find(:all, :conditions => ["featured = ?", true], :limit => 4).each do |evt| %>
		<li> 
			<h4><%= link_to evt.title, event_url(evt) %></h4>
			<!-- <p><strong><%#= start = evt.start_at.strftime("%b %d") %> <%#= endat = evt.end_at.strftime("%b %d"); " â€“ #{endat}" if start != endat %> </strong></p> -->
			<p><%= shorten(strip_tags(evt.description), 180).html_safe %> <br /><%= link_to "read more &#187;".html_safe, event_url(evt) %></p>
		</li>

	<% end %>
 </ul>
<ul>
	<% Meeting.find(:all, :order => "created_at DESC", :limit => 4).each do |meeting| %>
		<li>
			<h4><%= link_to meeting.title, meeting_url(meeting) %></h4>

			<p><%= shorten(strip_tags(meeting.blurb), 180) %> <br /><%= link_to "read more &#187;".html_safe, meeting_url(meeting) %></p>
		</li>

	<% end %>
 </ul>