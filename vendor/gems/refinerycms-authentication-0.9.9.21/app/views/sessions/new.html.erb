<div id="container_main_content">
  <div id="content">
		<div class='column_third wide green' id='maincolumn'>
	<h1>Please login to your account</h1>
	<% if flash[:warning] or flash[:notice] %>
	  <div id="notice" <% if flash[:warning] %>class="warning"<% end %>>
	    <%= flash[:warning] || flash[:notice] %>
	  </div>
	  <script type="text/javascript">
	    setTimeout("new Effect.Fade('notice');", 15000)
	  </script>
	<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<table style="width:250px;" id="loginbox">
		<tr>
			<td><%= f.label :login %></td>
			<td><%= f.text_field :login, :class => 'larger widest' %></td>
		</tr>
		<tr>
			<td><%= f.label :password %></td>
			<td><%= f.password_field :password, :autocomplete => 'off', :class => 'larger widest' %></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
      <td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td><%= link_to t('.forgot_password'), new_password_path(resource_name) %> | <%= link_to 'Register', "/members/register" %></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td><%= image_submit_tag "btn-action-login.png" %></td>
		</tr>
	</table>
<% end -%>
 

	</div>
	<div class='column_third red narrow'> &nbsp;</div>
	<div class="column_third right narrower">
		<div class="blue" style="margin-bottom: 40px;">
		  <h3>Quick Links to FAQs</h3>
			<%= ContentHolder.find(3).body.html_safe %>

	   </div>
	 </div>
	 <div class="clear_left"></div>
  </div>
</div>
<style type="text/css" media="screen">
	table#loginbox tr td {
		border: none;
	}
</style>