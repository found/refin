<div id="container_main_content">
  <div id="content">
		


<% content_for :body_content_left do %>

	<%=raw @page[:body] %>

<!-- <h3>Subscribe to our Calendar: <%#= link_to "Subscribe via RSS", events_path(:format => :rss) %></h3> -->
<!-- <hr /> -->
	 <div id="featured_events" class="events">
		<% if !@featured_events.empty? %>
			<h2>Featured Events</h2>
			<%= render :partial => 'event', :collection => @featured_events, :locals => { :featured => true } %>
		<% end %>
	</div>
	
  <div id="all_events" class="events">
		<% if !@events.empty? %>
			<h2>Current Events</h2>
			<%= render :partial => 'event', :collection => @events %>
		<% end %>
	</div>
	
	<div id="all_events" class="events">
		<% if !@upcoming.empty? %>
			<h2>Upcoming Events</h2>
			<%= render :partial => "event", :collection => @upcoming %>
		<% end %>
	</div>
<% end %>



<%= render :partial => "/shared/content_page" %>

<%= render :partial => "/shared/right_sidebar" %>



  </div>
</div>


