<ul>
  <% if Admin::SubscriptionTypesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_subscription_types_url
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_subscription_type_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::SubscriptionTypesController.sortable? and SubscriptionType.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Subscription Types"),
                 admin_subscription_types_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Subscription Types"),
                 admin_subscription_types_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>