<% content_for :body_content_title do %>
  <%= @subscription_type.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @subscription_type.title %>
    </p>
  </section>
  <section>
    <h1>Day</h1>
    <p>
      <%=raw @subscription_type.day %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="subscription_types">
      <% @subscription_types.each do |subscription_type| %>
        <li>
          <%= link_to subscription_type.title, subscription_type_url(subscription_type) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
