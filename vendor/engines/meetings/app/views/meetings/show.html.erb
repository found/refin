<% content_for :body_content_title do %>
  <%= @meeting.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @meeting.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @meeting.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @meeting.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @meeting.blurb %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="meetings">
      <% @meetings.each do |meeting| %>
        <li>
          <%= link_to meeting.title, meeting_url(meeting) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
