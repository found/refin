<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(email) -%>">
  <span class='title'>
    <%= email.subject %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), email_url(email),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_email_path(email),
         :title => t('.edit') %>
  </span>
</li>
