<% content_for :body_content_title do %>
  <%= @email.subject %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Subject</h1>
    <p>
      <%=raw @email.subject %>
    </p>
  </section>
  <section>
    <h1>From</h1>
    <p>
      <%=raw @email.from %>
    </p>
  </section>
  <section>
    <h1>Bcc</h1>
    <p>
      <%=raw @email.bcc %>
    </p>
  </section>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @email.body %>
    </p>
  </section>
  <section>
    <h1>Template Model</h1>
    <p>
      <%=raw @email.template_model %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="emails">
      <% @emails.each do |email| %>
        <li>
          <%= link_to email.subject, email_url(email) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
