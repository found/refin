<ul>
  <% if Admin::BusinessesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_businesses_url
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_business_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::BusinessesController.sortable? and Business.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Businesses"),
                 admin_businesses_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Businesses"),
                 admin_businesses_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>