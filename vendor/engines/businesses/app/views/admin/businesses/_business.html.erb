<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(business) -%>">
  <span class='title'>
    <%= business.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), business_url(business),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_business_path(business),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_business_path(business),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => business.name),
        :method => :delete %>
  </span>
</li>
