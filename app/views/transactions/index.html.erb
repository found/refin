<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Invoice</th>
    <th>Confirmation</th>
    <th>Error</th>
    <th>Error code</th>
    <th>Error message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.invoice %></td>
    <td><%= transaction.confirmation_id %></td>
    <td><%= transaction.error %></td>
    <td><%= transaction.error_code %></td>
    <td><%= transaction.error_message %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

